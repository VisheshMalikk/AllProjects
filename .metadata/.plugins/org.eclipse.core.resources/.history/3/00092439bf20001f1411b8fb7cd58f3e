package StringPrograms;

import java.util.Scanner;

public class switchcase {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int s, ar, per, ch;

		System.out.println("SIDE OF A TRIANGLE");
		s = sc.nextInt();
		
		
		System.out.println("ENTER 1 FOR AREA AND 2 FOR PERIMETER");
		ch = sc.nextInt();
		switch (ch) {

		case 1:
			ar = s * s;
			System.out.println("Area is:" + ar);
			break;

		case 2:
			per = 4 * s;
			System.out.println("Perimeter is:" + per);
			break;

		default:
			System.out.println("It is a wrong choice");
		}
	}

}
