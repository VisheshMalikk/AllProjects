  Case1 : ar = s*s;
  System.out.println("Area is:" +ar);
  break;
  
  Case2 : per = 4*s;
  System.out.println("Perimeter is:" +per);
  break;
  
  default : 
  System.out.println("It is a wrong choice");
  }
  }

	private static void Switch(int ar) {
